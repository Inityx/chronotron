{
    "extends": "eslint:recommended",
    "env": {
        "browser": false,
        "es6": true,
        "node": true
    },
    "rules": {
        "max-len": [
            "error",
            { "code": 120 }
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    }
}